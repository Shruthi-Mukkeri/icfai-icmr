@{
    ViewBag.Title = "ICMR - Payment Options";
    ViewBag.MetaDescription = "ICMR supports various payment method to give you better services. You can choose secure icfai payment gateway /paypal/offline payment option to get your desired product/s.";
    ViewBag.MetaKeywords = "payment options, icmr payment methods, our payment options";

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Url = "payment-methods";

}

<section class="Common-Section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-12">
                <div class="breadcrumbs pb-0" data-aos="fade-up">
                    <ol>
                        <li><a href="~/">Home</a></li>
                        <li>Our Payment Methods</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>

<section data-aos="fade-up">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <h2>ICMR Payment Options</h2>
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body">
                        <p>ICMR accepts payments from you in the following different ways</p>
                        <div class="d-flex flex-wrap justify-content-evenly align-items-center">
                            <div class="mb-3  bg-secondary-subtle h-100">
                                <div class="border p-3">
                                    <div class="d-flex  align-items-center">
                                        <img src="~/assets/img/paypal.jpg" alt="PayPal" class="img-fluid" loading="lazy">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3  bg-secondary-subtle h-100">
                                <div class="border p-3">
                                    <div class="d-flex  align-items-center">
                                        <img src="~/assets/img/secure-mode.jpg" alt="Secure Payment" class="img-fluid" loading="lazy">
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3  bg-secondary-subtle h-100">
                                <div class="border p-3">
                                    <div class="d-flex flex-column">
                                        <img src="~/assets/img/special-payment.jpg" alt="Special Payment" class="img-fluid" loading="lazy">
                                        <div class="mt-2">
                                            <h6 class="mb-1 text-decoration-underline">Offline:</h6>
                                            <p class="mb-0"><strong>Mail Us:</strong> casehelpdesk@ibsindia.org</p>
                                            <p class="mb-0"><strong>Call Us:</strong> +91- 9640901313</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>