@model List<ICMR.Models.avashortcas>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body p-2">
                <div class="row align-items-center">
                    <div class="col-md-8 border-end">
                        <h6>@item.casetitle</h6>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex flex-wrap float-end">
                            <a href="@Url.Action("ShortCases", "Home", new { id = item.Id })" target="_blank" class="btn btn-sm btn-outline-dark">
                                Details <i class="bi bi-arrow-up-right"></i>
                            </a>
                            <span class="mt-2 me-2 px-2"><i class="bi bi-currency-rupee"></i> Price: <span>@item.pricers</span></span>
                            <a class="btn btn-danger btn-sm text-white me-2" target="_blank" href="@Url.Action("AddToCart", "Home", new { id = item.Id })">
                                <i class="bi bi-handbag"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-2">
            <h3>No cases found.</h3>
        </div>
    </div>
}

