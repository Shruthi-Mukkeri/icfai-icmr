@model List<ICMR.Models.tblEbook>

@{
    ViewBag.Title = "Ebooks by Category";
}
<section class="Common-Section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-8 col-md-8 col-12">
                <div class="breadcrumbs pb-0 aos-init aos-animate" data-aos="fade-up">
                    <ol>
                        <li><a href="/">Home</a></li>
                        <li>Other Products</li>
                        <li>E-Books</li>
                        <li>@ViewBag.Category</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <h2>@ViewBag.Category</h2>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Case Title</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ebook in Model)
                        {
                            <tr>
                                <td>@ebook.title - @ebook.volume</td>
                                <td>
                                  
                                    <a href="/Home/ByCategoryDetails?id=@ebook.ebookId" class="btn btn-sm btn-outline-dark text-nowrap">
                                        Details <i class="bi bi-arrow-up-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No eBooks found in this category.</p>
        }
    </div>
</section>


