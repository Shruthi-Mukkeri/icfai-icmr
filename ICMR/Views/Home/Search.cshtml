@{
    ViewBag.Title = "Search Case Studies";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Update layout path if needed
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<section class="media-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div>
                    <h2>Search</h2>
                </div>
                <div class="form-floating mb-2 d-flex">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search..." aria-label="Search for...">
                    <label for="Search">Search...</label>
                    <button class="btn btn-danger ms-3" type="submit" id="searchButton">Search</button>
                </div>
                <div id="searchResults"></div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  $(document).ready(function () {
    function performSearch() {
        let searchValue = $('#searchInput').val().trim();

        if (searchValue.length === 0) {
            $('#searchResults').html('<p class="text-danger">Please enter a search term.</p>');
            return;
        }

        $.ajax({
            url: '@Url.Action("SearchCase", "Home")', // Adjust controller action if needed
            type: 'POST',
            data: { searchTerm: searchValue },
            success: function (response) {
                if (response.success && response.data.length > 0) {
                    let resultHtml = `
                        <div class="row fw-bold border-bottom py-2">
                            <div class="col-md-7 text-center">Case Title</div>
                            <div class="col-md-1 text-center">Case Code</div>
                            <div class="col-md-1 text-center">Price</div>
                            <div class="col-md-1 text-center">Details</div>
                            <div class="col-md-2 text-center">Add to Cart</div>
                        </div>`;

                    response.data.forEach(function (item) {
                        resultHtml += `
                            <div class="card mb-2 border-0 shadow-sm case-study-item">
                                <div class="card-body py-2">
                                    <div class="row align-items-center">
                                        <div class="col-md-7">
                                            <h6 class="mb-0">${item.casetitle}</h6>
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <span class="text-muted">${item.casecode}</span>
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <span><i class="bi bi-currency-rupee"></i>${item.pricers}</span>
                                        </div>
                                        <div class="col-md-1 text-center">
                                            <a href="/Home/CaseStudyDetails/${item.Id}" class="btn btn-sm btn-outline-dark text-nowrap">
                                                Details <i class="bi bi-arrow-up-right"></i>
                                            </a>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <button class="btn btn-danger btn-sm text-white add-to-cart-btn"
                                                    data-id="${item.Id}"
                                                    data-type="${item.Type}">
                                                <i class="bi bi-handbag"></i> Add to Cart
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>`;
                    });

                    $('#searchResults').html(resultHtml);
                } else {
                    $('#searchResults').html('<div class="card border-0 shadow-sm"><div class="card-body p-2 text-center"><h4 class="text-muted">No cases found.</h4></div></div>');
                }
            },
            error: function () {
                $('#searchResults').html('<p class="text-danger">Error occurred while searching.</p>');
            }
        });
    }

    $('#searchButton').on('click', function () {
        performSearch();
    });

    $('#searchInput').on('keypress', function (e) {
        if (e.which === 13) { // 13 = Enter key
            performSearch();
            e.preventDefault(); // prevent form submission (if inside a form)
        }
    });
});

$(document).on('click', '.add-to-cart-btn', function () {
    var id = $(this).data('id');
    var type = $(this).data('type');

    console.log('ID:', id);  // Log the article ID
    console.log('Type:', type);  // Log the article Type

    $.ajax({
        url: '/Home/AddToCart',
        type: 'POST',
        data: { articleId: id, type: type },  // Make sure this is correct
        success: function (res) {
            if (res.success) {
                alert("Item added to cart! Total items in cart: " + res.cartCount);
            } else {
                alert(res.message);
            }
        },
        error: function () {
            alert("Error adding item to cart.");
        }
    });
});



</script>