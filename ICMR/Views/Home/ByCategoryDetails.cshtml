@model List<ICMR.Models.EbookCaseViewModel>

@{
    var firstItem = Model.FirstOrDefault();
    var groupedData = Model.GroupBy(e => e.SubjectCategory);
}

<section class="bggrer py-1  border mt-5 " id="IUPS-section">
    <div class="container-fluid">
        <div class="row customRow">
            <div class="col-md-12">
                <div id="carouselExampleAutoplaying" class="IUPS-section carousel slide" data-bs-ride="carousel">
                    <div class="row">
                        <div class="col-md-11 col-10 mx-auto">
                            <div class="wrapper">
                                <div class="item">
                                    <a href="/Home/ByCategory?category=Functional Areas" class="text-dark d-flex align-content-between justify-content-between text-wrapper">
                                        <span>
                                            Functional Areas
                                        </span>
                                        <i class="bi bi-arrow-up-right"></i>
                                    </a>
                                </div>
                                <div class="item">
                                    <a href="/Home/ByCategory?category=Industries" class="text-dark d-flex align-content-between justify-content-between text-wrapper">
                                        <span>Industries</span>
                                        <i class="bi bi-arrow-up-right"></i>
                                    </a>
                                </div>
                                <div class="item">
                                    <a href="/Home/ByCategory?category=Management Lessions" class="text-dark d-flex align-content-between justify-content-between text-wrapper">
                                        <span>
                                            Management Lessions
                                        </span>
                                        <i class="bi bi-arrow-up-right"></i>
                                    </a>
                                </div>
                                <div class="item">
                                    <a href="/Home/ByCategory?category=Multinational Companies" class="text-dark d-flex align-content-between justify-content-between text-wrapper">
                                        <span>Multinational Companies</span>
                                        <i class="bi bi-arrow-up-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                             <span class="sr-only">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                           <span class="sr-only">Next</span>
                        </button>*@
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container mt-4">
    @*<h2 class="mb-4">@firstItem.Title</h2>*@

    @if (firstItem != null)
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow h-100">
                    <div class="card-body">
                        <strong>Cover Image:</strong><br />
                        <img src="~/UploadedImages/@firstItem.CoverImg" alt="Cover Image" class="img-fluid rounded" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow h-100">
                    <div class="card-body">
                        <h3>Details</h3>
                        <div><strong>Volume Edition:</strong> @firstItem.Volume</div>

                        <div><strong>Pages:</strong> @firstItem.Pages</div>
                        <p>eBooks are provided in <strong>@firstItem.EbookPdf</strong> locked file format.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow h-100">
                    <div class="card-body">
                        <h3>Pricing</h3>
                        <div><strong>Prise:</strong> ₹@firstItem.Prise</div>
                        <p>Please allow 3 working days to e-mail you the ebook.</p>
                    </div>
                </div>
            </div>

        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered mb-4">
            <thead class="thead-dark">
                <tr>

                    <th colspan="3">Table of Content</th>
                </tr>
            </thead>
            @foreach (var categoryGroup in groupedData)
            {

                <tbody>
                    <tr class="table-danger">
                        <td colspan="3"><strong> @categoryGroup.Key</strong></td>
                    </tr>
                    @{
                        int count = 1;
                        foreach (var ebook in categoryGroup)
                        {
                            <tr>
                                <td>Case @count</td>
                                <td>@ebook.CaseTitle</td>
                                
                                <td>
                                    <a href="@Url.Action("CaseStudyDetails", "Home", new { casecode = ebook.casecode })"
                                       class="btn btn-sm btn-outline-dark text-nowrap">
                                        Details <i class="bi bi-arrow-up-right"></i>
                                    </a>
                                    @*<a href="@Url.Action("ByCategoryDetails", "Home", new { id = ebook.CaseId })" class="btn btn-sm btn-info">View</a>*@
                                </td>

                            </tr>
                            count++;
                        }
                    }
                </tbody>
            }

        </table>
    </div>

</section>
