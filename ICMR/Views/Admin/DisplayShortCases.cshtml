@model IEnumerable<ICMR.Models.avashortcas>

@{
    ViewBag.Title = "All Short Case Studies";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h3 class="mb-4">Short Cases</h3>
    <div class=" mb-3">
        <a href="@Url.Action("AddShortCaseStudies", "Admin")" class="btn btn-danger ">Add New Case</a>
    </div>

    <table id="datatablegrid" class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Industry</th>
                <th>Case Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.casetitle</td>
                    <td>@item.industry</td>
                    <td>@item.casecode</td>
                    <td>
                        <a href="@Url.Action("EditShortCase", "Admin", new { id = item.Id })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("DeleteShortCase", "Admin", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete this Case?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>



<script>

    $('#datatablegrid').DataTable({
        paging: true,
        searching: true,
        ordering: false,
        info: true,
        autoWidth: false
    });

</script>
