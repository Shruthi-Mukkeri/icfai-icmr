@model ICMR.Models.ICMREvent
@using CaptchaMvc.HtmlHelpers

@{
    ViewBag.Title = "Add Events";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}



@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}


<section class="section profile dashboard">
    <div class="container">
        <div class="card border-0 shadow">
            <div class="card-body">
                <h3>Add Events</h3>
                <form action="@Url.Action("AddEvents", "Admin")" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" id="Title" name="Title" class="form-control" placeholder="Title" required>
                                <label for="Title">Title</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" id="Type" name="Type" class="form-control" placeholder="Type">
                                <label for="Type">Type</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <textarea id="EventDescription" name="EventDescription" class="form-control" placeholder="Event Description"></textarea>
                                <label for="EventDescription">Event Description</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="date" id="EventDate" name="EventDate" class="form-control" placeholder="Event Date">
                                <label for="EventDate">Event Date</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="date" id="StartDate" name="StartDate" class="form-control" placeholder="Start Date">
                                <label for="StartDate">Start Date</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="date" id="EndDate" name="EndDate" class="form-control" placeholder="End Date">
                                <label for="EndDate">End Date</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" id="EventUrl" name="EventUrl" class="form-control" placeholder="Event Url">
                                <label for="EventUrl">Event Url</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="file" id="ImageFile" name="ImageFile" class="form-control" placeholder="Upload Image" accept="image/*">
                                <label for="ImageFile">Upload Image</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="file" id="PdfFile" name="PdfFile" class="form-control" placeholder="Upload PDF" accept=".pdf,application/pdf">
                                <label for="PdfFile">Upload PDF</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" id="AltTagDescription" name="AltTagDescription" class="form-control" placeholder="Alt Tag Description">
                                <label for="AltTagDescription">Alt Tag Description</label>
                            </div>
                        </div>

                        <div class="form-floating mb-3 leadCapture-section" id="divCaptcha">
                            @Html.MathCaptcha()
                        </div>

                    </div>

                    <div class="mt-4 text-center">
                        <button type="submit" class="btn btn-danger">Submit</button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</section>

<style>
    .small-input {
        height: 30px;
        font-size: 14px;
        padding: 4px;
    }

    .small-textarea {
        font-size: 14px;
        padding: 4px;
    }
</style>
