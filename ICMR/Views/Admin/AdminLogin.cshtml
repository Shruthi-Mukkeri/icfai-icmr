@model ICMR.Models.ICMRLogin

@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<section class="section profile dashboard py-5">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px;">
            <div class="card-body p-4">
                <h3 class="text-center mb-4">Admin Login</h3>

                @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
                {
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="form-floating">
                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Email Id" })
                                <label for="EmailId">Email Id</label>
                                @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                                <label for="Password">Password</label>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-danger px-5">Login</button>
                        </div>
                    </div>
                }

                @if (ViewBag.Message != null)
                {
                    <div class="mt-3 text-center">
                        <p class="text-danger">@ViewBag.Message</p>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
